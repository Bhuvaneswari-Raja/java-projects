import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Set;

public class Catalog {
	
    private Bookshelf books;
    private Map<Integer, String> items = new HashMap<>();
    private Map<Integer, String> tempList = new HashMap<>();
     
    
    public Catalog() {
        books = new Bookshelf();
    }

    public void addItem(String title, String author) {
    	books.addItem(title, author);
    }

    public void removeItem(String title) {
    	books.removeItem(title);
    }

      
    public String[] getItem(String title) {
    	if(items.containsValue(title)) {
    		
    		String[] temp = {title, books.getAuthor(title),};
    		
    	}
		return temp;
    	
    }
    
    public void getAuthor(String title) {
    	books.getAuthor(title);
    }
    
    public void returnItem(int id, String title) {
    	items.put(id, title);
    }
    
    /*
    public static void main(String[] args) {
    	
    	Catalog cat = new Catalog();
    	
    	String[] arr = {"Rowling", "00000"};
    	
    	cat.addItem("Harry Potter", arr);
    	
    	System.out.println();
    	
    } 
    */
    
   
       
}


