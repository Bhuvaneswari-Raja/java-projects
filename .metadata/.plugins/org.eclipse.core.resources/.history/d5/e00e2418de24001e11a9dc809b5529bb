import java.util.HashMap;
import java.util.ArrayList;

public class Bookshelf {
	
	private HashMap<String, String[]> allBooks;
	private String[] tempList;
	
	
	
	public Bookshelf() {
		setItems();
	}
	
	 
	public void setItems() {
		int rand = (int) ((9 - 0 + 1) + 0);
    	String textId = "";
    	for(int i = 0; i < 10; i++) {
    		rand = (int) ((10 - 0 + 1) + 0);
    		textId = textId + String.valueOf(rand);
    	}
		allBooks.put("Fangirl", new String[] {"Rainbow Rowell", textId});
	}
	
	public void addItem(String title, String[] info) {
		allBooks.put(title, info);
	}
	
	public void removeItem(String title) {
		
	}
	
	
	public void searchItem(String itemName) {
		if(allBooks.containsKey(itemName)) {
			String[] tempItem = allBooks.remove(itemName);
		}
	}
	
	public String[] returnItem() {
		return tempList;
		
	}
	
	
	
	
	 
}
